<section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">

        <div class="px-5 ms-xl-4">
          <i class="fas fa-crow fa-2x me-3 mt-xl-4" style="color: #709085;"></i>
          <span class="h1 fw-bold mb-0 text-light">MuniAquia</span>
        </div>

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 pt-xl-0 mt-xl-n5">
          <div class="container">
            <div class="row">
              <div class="col">
                <form action="/" method="post" style="width: 23rem;">

                  <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Ingresar</h3>

                  <div class="form-outline mb-4">
                  <input name="DNI" type = "phone" class="form-control" required minlength="8" maxlength="8"onkeypress="return isNumberKey(event)"/>
                  
                    <label class="form-label">Ingresa tu DNI</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="password" name="password" class="form-control form-control-lg" />
                    <label class="form-label">Ingresa tu contraseña</label>
                  </div>

                  <div class="pt-1 mb-4">
                    <input class="btn btn-info btn-lg btn-block" type="submit" value="Ingresar" />
                  </div>

                </form>
              </div>
            </div>
            <div class="row">
              <div class="col">
                 <p class="small mb-5 pb-lg-2">
              <a class="text-muted" href="/forgotpass">¿Olvidaste tu contraeña?</a>
              </p>
            <p>¿No tienes cuenta? <a href="/registro" class="link-info">Registrate aquí</a></p>

              </div>
            </div>
          </div>



        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="/images/background-aquia.jpg" alt="Login image" class="w-100 vh-100"
          style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section>
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h2>Buscar Expedientes</h2>
                </div>
            </div>
        </div>
        <div class="container-fluid">
                <div class="row">
                    <div class="col">
                        <form action="">
                            <h3>Registro</h3>
                            <div class="row">
                                <div class="col-12">
                                    <label for="">Fecha desde</label>
                                    <input type="date" class="form-control">
                                </div>
                                <div class="col-12">
                                    <label for="">Fecha hasta</label>
                                    <input type="date" class="form-control">
                                </div>
                            </div>
                            <h3>Orígen del expediente</h3>
                            <div class="row">
                                <div class="col-12">
                                    <label for="">Orígen</label> &nbsp;&nbsp;
                                    <span class="me-3">Interno</span><input type="radio">&nbsp;
                                    <span class="me-3">Extermo</span><input type="radio">
                                </div>
                                <div class="col-12">
                                    <label for="">Dependencia</label>
                                    <select name="" id="" class="form-control">
                                        <option value="1">-----Todos------</option>
                                        <option value="2">Gerencia</option>
                                        <option value="3">Alcaldia</option>
                                        <option value="4">Secretaria</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label for="">Detalle</label>
                                    <input type="text" class="form-control">
                                </div>
                                <div class="col-12">
                                    <label for="">Firma</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <h3>Datos del expediente</h3>
                            <div class="row">
                                <div class="col-12">
                                    <label for="">Tipo de expediente</label>
                                    <select name="" id="" class="form-control">
                                        <option value="1">-----Todos------</option>
                                        <option value="2">Oficio</option>
                                        <option value="3">Carta</option>
                                        <option value="4">Memorandum</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label for="">Número</label>
                                    <input type="number" class="form-control">
                                </div>
                                <div class="col-12">
                                    <label for="">Siglas</label>
                                    <input type="text" class="form-control">
                                </div>
                                <div class="col-12">
                                    <label for="">Asunto</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary">Buscar</button>
                            </div>
                        </form>
                    </div>
                    
                    
                </div>
                <div class="row">
                     <table class="table table-sm table-hover table-striped">
                        <thead>
                            <tr>
                                <th scope="col"><input type="checkbox"></th>
                                <th scope="col">Reg</th>
                                <th scope="col">Origen</th>
